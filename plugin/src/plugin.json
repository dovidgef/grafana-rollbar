{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "Rollbar",
  "id": "dovidgef-grafana-rollbar",
  "metrics": true,
  "info": {
    "description": "Rollbar Datasource",
    "author": {
      "name": "Dovid Gefen",
      "url": "https://github.com/dovidgef"
    },
    "keywords": ["rollbar", "datasource"],
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "links": [
      {
        "name": "Website",
        "url": "https://github.com/grafana/grafana-starter-datasource"
      },
      {
        "name": "License",
        "url": "https://github.com/grafana/grafana-starter-datasource/blob/master/LICENSE"
      }
    ],
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": ">=7.0.0",
    "plugins": []
  },
  "routes": [
    {
      "path": "rollbar",
      "url": "https://api.rollbar.com/api/1/reports/occurrence_counts",
      "method": "GET",
      "headers": [
        {
          "name": "X-Rollbar-Access-Token",
          "content": "{{ .SecureJsonData.apiKey }}"
        }
      ]
    }
  ]

}
